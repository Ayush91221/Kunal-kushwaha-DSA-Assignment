
# Program to calculate the facorial of any number 

package Intermediate_java_progrms;

import java.util.Scanner;

public class Factorial {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        System.out.print("Please enter the number of which you want the factorial: ");
        int num = in.nextInt();
        System.out.println("The factorial of the number = "+factorial(num));
        in.close();
        
    }
    static  int  factorial(int num){
        int c=1;
        for (int i = 1; i <= num; i++) {
            c=c*i;
        }
        return c;
    }
}
